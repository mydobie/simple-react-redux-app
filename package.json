{
  "name": "simple-react-redux-app",
  "description": "",
  "version": "0.5.0",
  "author": "University of Minnesota OIT - AppDev",
  "private": true,
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "bootstrap": "^4.5.0",
    "feature_flags": "file:modules/mydobie-feature_flags-1.0.0.tgz",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "reactstrap": "^8.8.1",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.19.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.5.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-watch": "^7.0.0",
    "husky": "^4.2.5",
    "jest-axe": "^4.1.0",
    "lint-staged": "^10.2.7",
    "node-sass": "^4.14.1",
    "onchange": "^7.1.0",
    "prettier": "2.2.1",
    "react-scripts": "^4.0.1",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.3.0",
    "stylelint": "^13.5.0",
    "stylelint-config-prettier": "^8.0.1",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "d": "npm i && npm rebuild node-sass",
    "installDependencies": "npm run d",
    "start": "REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts start",
    "start:mock": "REACT_APP_USE_MOCKS=true npm run start",
    "----------------------------------------------------------1": "",
    "build": "npm run d && npm run test && npm run npmAudit && REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts build",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:watch": "react-scripts test ",
    "test:update": "npm run test -- -u",
    "----------------------------------------------------------2": "",
    "lint": "npm run lint:js && npm run prettier:all && npm run lint:scss:all",
    "lint:fix": "npm run prettier:fix:all && npm run lint:js:fix &&  npm run lint:scss:fix:all",
    "lint:watch": "onchange 'src/**/*.*' -- npm run lint:fix",
    "----------------------------------------------------------3": "",
    "lint:js": "esw --ext .jsx,.js --color ",
    "lint:js:fix": "npm run lint:js -- --fix",
    "prettier": "prettier  --ignore-path ./.eslintignore --check",
    "prettier:all": "npm run prettier '**/*.+(js|jsx|html|css|scss|json)'",
    "prettier:fix": "prettier  --ignore-path ./.eslintignore --write",
    "prettier:fix:all": "npm run prettier:fix '**/*.+(js|jsx|html|css|scss|json)'",
    "lint:scss": "stylelint --ignore-path ./.eslintignore ",
    "lint:scss:all": "npm run lint:scss './**/*.+(css|scss)'",
    "lint:scss:fix:all": "npm run lint:scss -- --fix './**/*.+(css|scss)'",
    "----------------------------------------------------------4": "",
    "clean": "rm -rf node_modules && rm package-lock.json && npm run d",
    "checkCoverage": "node ./utils/testCoverage.js",
    "createTar": "node ./utils/createArchive.js",
    "npmAudit": "npm audit -audit-level high"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 80
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "prettier/react",
      "prettier",
      "react-app",
      "react-app/jest"
    ],
    "globals": {
      "styles": true
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "jest": true,
      "es6": true,
      "jquery": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "prettier",
      "eslint-plugin-react"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-var": "error",
      "curly": "error",
      "one-var": "error",
      "no-console": "error",
      "no-unused-vars": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-prettier"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run npmAudit"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/index.jsx",
      "!<rootDir>/src/serviceWorker.js",
      "!<rootDir>/src/setupTests.js",
      "!<rootDir>/src/redux/store.js"
    ],
    "coverageReporters": [
      "html",
      "json-summary",
      "text-summary"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
