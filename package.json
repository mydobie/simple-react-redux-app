{
  "name": "simple-react-redux-app",
  "description": "",
  "version": "0.6.0",
  "license": "MIT",
  "repository": "https://github.com/mydobie/simple-react-redux-app",
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.0",
    "axios": "^0.21.1",
    "bootstrap": "5.1.1",
    "feature-flags": "mydobie/featureFlags#npmbuild2.1.0",
    "history": "^5.0.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0-beta.6",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "styled-components": "^5.3.1"
  },
  "// devDependencies": [
    "Sass is pinned to a lower version otherwise it breaks on the bootstrap build"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/axios": "^0.14.0",
    "@types/jest-axe": "^3.5.1",
    "@types/react-router-dom": "^5.1.9",
    "@types/redux-mock-store": "^1.0.3",
    "@types/styled-components": "^5.1.14",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "axios-mock-adapter": "^1.19.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-watch": "^7.0.0",
    "husky": "^7.0.0",
    "jest-axe": "^5.0.1",
    "lint-staged": "^11.0.0",
    "onchange": "^7.1.0",
    "prettier": "^2.3.2",
    "react-scripts": "^4.0.3",
    "redux-mock-store": "^1.5.4",
    "sass": "1.37.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "typescript": "^4.3.5",
    "uglify-js": "^3.12.3"
  },
  "// resolutions": [
    "Pin a package to a particular version.",
    "Only use to resolve security advisories",
    "See https://www.npmjs.com/package/npm-force-resolutions"
  ],
  "resolutions": {
    "glob-parent": "5.1.2",
    "set-value": "4.0.1",
    "immer": "9.0.6"
  },
  "scripts": {
    "d": "npm i",
    "installDependencies": "npm run d",
    "start": "REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts start",
    "start:mock": "REACT_APP_USE_MOCKS=true npm run start",
    "// ----------------------------------------------------------1": "",
    "buildts": "tsc --project tsconfig-build-files.json",
    "build": "npm run d && npm run test && npm run npmAudit && npm run build:ci",
    "build:ci": "REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts build",
    "test": "react-scripts test --coverage --passWithNoTests --testPathIgnorePatterns /helpers --watchAll=false ",
    "test:watch": "react-scripts test ",
    "test:update": "npm run test -- -u",
    "// ----------------------------------------------------------2": "",
    "lint": "npm run lint:js && npm run prettier:all && npm run lint:scss:all",
    "lint:fix": "npm run prettier:fix:all && npm run lint:js:fix &&  npm run lint:scss:fix:all",
    "lint:watch": "onchange 'src/**/*.*' -- npm run lint:fix",
    "// ----------------------------------------------------------3": "",
    "lint:js": "tsc --noEmit && esw --ext .js,.jsx,.ts,.tsx --color ",
    "lint:js:fix": "npm run lint:js -- --fix",
    "prettier": "prettier  --ignore-path ./.eslintignore --check",
    "prettier:all": "npm run prettier '**/*.+(js|jsx|ts|tsx|html|css|scss|json)'",
    "prettier:fix": "prettier  --ignore-path ./.eslintignore --write",
    "prettier:fix:all": "npm run prettier:fix '**/*.+(js|jsx|ts|tsx|html|css|scss|json)'",
    "lint:scss": "stylelint --ignore-path ./.eslintignore ",
    "lint:scss:all": "npm run lint:scss './**/*.+(css|scss)'",
    "lint:scss:fix:all": "npm run lint:scss -- --fix './**/*.+(css|scss)'",
    "// ----------------------------------------------------------4": "",
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm run d",
    "uglify": "uglifyjs ",
    "checkCoverage": "node ./utils/testCoverage.js",
    "createTar": "node ./utils/createArchive.js",
    "npmAudit": "npm audit -audit-level high",
    "// ----------------------------------------------------------5": "",
    "prepare": "husky install",
    "preinstall": "npx npm-force-resolutions"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 80
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react",
      "@typescript-eslint",
      "prettier",
      "import"
    ],
    "extends": [
      "airbnb-typescript",
      "airbnb/hooks",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "env": {
      "browser": true,
      "jasmine": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "react/static-property-placement": "off",
      "react/require-default-props": "off",
      "react/prop-types": "off",
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "no-var": "error",
      "curly": "error",
      "no-console": "error",
      "no-unused-vars": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-prettier"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx",
      "!src/__test_fixtures__/**/*.*"
    ],
    "coverageReporters": [
      "html",
      "json-summary",
      "text-summary"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
